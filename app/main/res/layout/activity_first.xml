<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_page_background"
    android:orientation="vertical"
    tools:context=".activities.FirstActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:paddingTop="80dp"
        app:srcCompat="@drawable/first_vector" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="E-LEARNING"
        android:textColor="@color/amp_blue"
        android:textSize="45dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:text="LEVEL UP YOUR LEARNING"
        android:textSize="18dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvSpacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/poppinsbold"
        android:text="Get Started"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvSpacing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button2"
        android:fontFamily="@font/poppinsbold"
        android:text="I already have an account"
        android:textColor="@color/blue"
        android:textSize="18dp"/>

</LinearLayout>